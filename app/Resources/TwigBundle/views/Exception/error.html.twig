{% extends 'base.html.twig' %}

{% block title %} Error: {{ status_text }} {% endblock %}
{% block body %}
<div class="row">
    <div class="col-m-12">
        <h1>&nbsp;</h1>
     </div>
</div>
<div class="container">

     <div id="contenido" >
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Error</h1>
            </div>
<div class="panel-body">
  <center>
  <div class="alert alert-danger">
 <p><h1>El servidor devolvió un error <strong>{{ status_code }} {{ status_text }}</strong></h1></p>
           <p> {% if status_code == 403 %}
                <h2>Usted no tiene acceso a la página</h2>
            {% elseif status_code == 404 %}
                <h2>La página no existe</h2>
            {% endif %}</p>
</div>
		
</center>
</div>
</div>
</div>
</div>

{% endblock %}