         <p>{{ form_errors(form.comisioncomision) }}</p>
        <p> {{ form_widget(form.comisioncomision) }}</p>
</div>
<div>
        <p>{{ form_label(form.diadia, 'Día:') }}
         <p>{{ form_errors(form.diadia) }}</p>
        <p> {{ form_widget(form.diadia) }}</p>
</div>


</center>



        <p><center><input type="submit" class="btn btn-success" value="Crear horario"></center></p>
    {{ form_end(form) }}


