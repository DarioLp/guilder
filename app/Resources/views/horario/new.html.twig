{% extends 'base.html.twig' %}


{% block title %} Crear horario {% endblock %}

{% block body %}


<div class="row">
    <div class="col-m-12">
        <h1>&nbsp;</h1>
     </div>
</div>

<div class="container">

     <div id="contenido" >
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Crear nuevo  horario</h1>
            </div>
<div class="panel-body">

<center>
    {{ form_start(form) }}
<div>
        <p>{{ form_label(form.inicio, 'Inicio:') }}</p>
         <p>{{ form_errors(form.inicio) }} </p>
         <p>{{ form_widget(form.inicio) }}</p>
</div>
<div>
