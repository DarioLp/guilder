{# ... you will probably extend your base template, like base.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Güilder - Registro {% endblock %}
{% block body %}
<div class="row">
                        <div class="col-m-12">
                            <h1>&nbsp;</h1>
                        </div>
                    </div>

<form action="{{ path('user_registration') }}" method="post">

				
<div class="container">
     <div class="card card-container">
	 <h1><center><strong>Registro</strong></center></h2>
          <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
			
    <label for="username">Usuario:</label>
	{% if form_errors(form.username)|length >0 %}
	<center><h4>Error de usuario</h4></center>
	{% endif %}
	<input type="text" id="registro_username" name="registro[username]" required="required" class="form-control"
           placeholder="Nombre de usuario" required autofocus>
	
    <label for="registro_plainPassword_first" class="required">Contraseña (mínimo 4 caracteres):</label>
	{% if form_errors(form.plainPassword.first)|length >0 %}
	<center><h4>Error de contraseña</h4></center>
	{% endif %}
	<input type="password" id="registro_plainPassword_first" name="registro[plainPassword][first]" required="required" class="form-control"
           placeholder="Contraseña" required autofocus>
	<label for="registro_plainPassword_second" class="required">Contraseña de nuevo:</label>
	
	<input type="password" id="registro_plainPassword_second" name="registro[plainPassword][second]" required="required" class="form-control"
           placeholder="Repetir contraseña" required autofocus>
	<label for="registro_token" class="required">Token:</label>
		{% if form_errors(form.token)|length >0 %}
		<center><h4>Token inválido</h4></center>
		{% endif %}
	<input type="text" id="registro_token" name="registro[token]" required="required" class="form-control"
           placeholder="AAAAA" required autofocus>

 <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Registrarse</button>
</form>
    </div><!-- /card-container -->
 </div><!-- /container --> 
{% endblock %}



