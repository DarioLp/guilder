{# ... you will probably extend your base template, like base.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Güilder - Login {% endblock %}
{% block body %}

<form action="{{ path('login') }}" method="post">

<div class="container">
     <div class="card card-container">
	 <h1><center><strong>Login</strong></center></h2>
          <!--<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />-->
        <img id="profile-img" class="profile-img-card"  src="{{ asset('logologin.png') }}">
            <p id="profile-name" class="profile-name-card"></p>
	{% if error %}
    <center><div><h4>Error de usuario/contraseña</4></center>
	<!--{{ error.messageKey|trans(error.messageData, 'security') }}</div><-->
	{% endif %}
    <label for="username">Usuario:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"
           placeholder="Nombre de usuario" required autofocus>
    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña" required>
    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Logear</button>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <center><a href="{{ path('user_registration') }}">
                Registrarse
            </a></center>
</form>
    </div><!-- /card-container -->
 </div><!-- /container --> 
{% endblock %}


