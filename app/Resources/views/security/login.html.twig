{% extends 'base.html.twig' %}
{% block title %} Login {% endblock %}
{% block extras %}
<link rel="stylesheet" type="text/css" href="{{asset('styles/login.css')}}">
{% endblock %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('login') }}" method="post">

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Ingresa con tu usuario</h1>
            <div class="account-wall">
                <img class="profile-img" src="{{ asset('login.png')}}"
                    alt="">
                <label for="username">Usuario:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"
				placeholder="usuario"/>
			<label for="password">Password:</label>
			<input type="password" id="password" name="_password" class="form-control" placeholder="contraseÃ±a"/>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
					{#
					If you want to control the URL the user is redirected to on success (more details below)
					<input type="hidden" name="_target_path" value="/account" />
					#}
            </div>
        </div>
    </div>
</div>


{% endblock %}